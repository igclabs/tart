{
    "name": "igclabs/tart",
    "description": "TART (Terminal Art for Artisan) - A beautiful, expressive terminal UI toolkit for PHP console applications with automatic logo generation, themes, and rich formatting",
    "keywords": [
        "tart",
        "terminal-art",
        "console",
        "terminal",
        "cli",
        "command",
        "artisan",
        "output",
        "formatting",
        "colors",
        "ui",
        "laravel",
        "symfony",
        "ascii-art",
        "logo",
        "themes",
        "styled",
        "beautiful-cli"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/igclabs/tart",
    "support": {
        "issues": "https://github.com/igclabs/tart/issues",
        "source": "https://github.com/igclabs/tart"
    },
    "authors": [
        {
            "name": "IGC Development Team",
            "email": "support@igcenterprises.com",
            "homepage": "https://igcenterprises.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/console": "^5.0|^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "phpstan/phpstan": "^1.0"
    },
    "suggest": {
        "illuminate/console": "Required for Laravel integration (^9.0|^10.0)"
    },
    "autoload": {
        "psr-4": {
            "IGC\\Tart\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IGC\\Tart\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "stan": "phpstan analyse"
    },
    "extra": {
        "laravel": {
            "providers": [
                "IGC\\Tart\\Laravel\\TartServiceProvider"
            ]
        }
    }
}

