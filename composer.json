{
    "name": "profss/tart",
    "description": "TART (Terminal Art for Artisan) - A beautiful, expressive terminal UI toolkit for PHP console applications with automatic logo generation, themes, and rich formatting",
    "keywords": [
        "tart",
        "terminal-art",
        "console",
        "terminal",
        "cli",
        "command",
        "artisan",
        "output",
        "formatting",
        "colors",
        "ui",
        "laravel",
        "symfony",
        "ascii-art",
        "logo",
        "themes",
        "styled",
        "beautiful-cli"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/profss/tart",
    "support": {
        "issues": "https://github.com/profss/tart/issues",
        "source": "https://github.com/profss/tart"
    },
    "authors": [
        {
            "name": "Profss Development Team",
            "email": "dev@profss.com",
            "homepage": "https://profss.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/console": "^5.0|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "^7.0|^8.0",
        "phpstan/phpstan": "^1.0"
    },
    "suggest": {
        "illuminate/console": "Required for Laravel integration (^9.0|^10.0)"
    },
    "autoload": {
        "psr-4": {
            "Profss\\Tart\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Profss\\Tart\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}

